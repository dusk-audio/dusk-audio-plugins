{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "fast-debug",
            "displayName": "Fast Debug Build",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build_fast_debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "-O0 -g -pipe",
                "CMAKE_C_FLAGS": "-O0 -g -pipe",
                "JUCE_COPY_PLUGIN_AFTER_BUILD": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "fast-release",
            "displayName": "Fast Release Build",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build_fast_release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-O2 -pipe",
                "CMAKE_C_FLAGS": "-O2 -pipe",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "OFF",
                "JUCE_COPY_PLUGIN_AFTER_BUILD": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja",
            "displayName": "Ninja Build (Fastest)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build_ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-O2 -pipe",
                "CMAKE_C_FLAGS": "-O2 -pipe",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "fast-debug",
            "configurePreset": "fast-debug",
            "jobs": 0
        },
        {
            "name": "fast-release",
            "configurePreset": "fast-release",
            "jobs": 0
        },
        {
            "name": "ninja",
            "configurePreset": "ninja",
            "jobs": 0
        }
    ]
}